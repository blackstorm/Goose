<div class="container md:w-[24rem] mx-auto md:mt-10 p-2 md:p-0">
  <h1 class="text-2xl font-medium text-center mt-4 mb-4">Login</h1>

  <div class="p-4 bg-white border shadow-sm rounded-md">
    <%= form_with url: login_index_path do |form| %>
      <div class="flex flex-col space-y-4">
        <div class="flex flex-col space-y-2">
          <%= form.label :blog_name, "Username"%>
          <%= form.text_field :username, class:"form-control", placeholder: "Admin", required: true, "maxlength": 10, "minLength": 1 %>
        </div>
        <div class="flex flex-col space-y-2">
          <%= form.label :blog_name, "Password"%>
          <%= form.password_field :password, class:"form-control", placeholder: "Admin", required: true, "maxlength": 20, "minLength": 6 %>
        </div>
        <%= form.button "Login", class:"btn" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <span class="text-gray-400"><%= @blog_name %></span>
  </div>

  <div class="flex flex-col mt-2 mb-2 space-y-2">
    <% flash.each do |flash_type, message| %>
      <div class="flex flex-row items-center px-4 py-2 border rounded bg-yellow-100">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        <p class="ml-2"><%= message %></p>
      </div>
    <% end %>
  </div>

</div>