<div class="container mt-4 mt-md-5">
  <div class="row bg-white rounded border">
      <% @articles.each do |a| %>
      <div class="col-12 px-4 py-4">
        <div class="row border-bottom">
          <div class="col-8">
            <%= a.title %>
          </div>
          <div class="col-2">
            <span><%= a.created_at.strftime('%m/%d/%Y') %></span>
            <span class="badge text-bg-success"><%= a.status %></span>
          </div>
          <div class="col-2">
            <%= link_to "Edit", "/admin", class: "btn btn-light btn-sm" %>
            <%= link_to "Delete", "/admin", method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
    </div>
    <% end %>
  </div>

</div>